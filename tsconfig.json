{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "types": ["webpack-env", "node", "chai", "mocha"],
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "outDir": "./js",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "removeComments": true
    },
    "include": ["./src/**/*.ts", "./src/**/*.vue", "vue.config.js", "vue.config.ts"],
    "exclude": ["./src/tests/*"]
}
